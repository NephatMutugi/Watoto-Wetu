<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeworkActivity"
    android:background="@color/powderBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/app_name_txt"
            android:fontFamily="@font/calligraffitti"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_text"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeworkName"
        android:layout_width="332dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/homework_name_background"
        android:gravity="center"
        android:text="@string/cre"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:background="@drawable/homework_description_name_background"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/description"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeworkName" />

    <TextView
        android:id="@+id/homeworkQuestions"
        android:layout_width="332dp"
        android:layout_height="150dp"
        android:background="@drawable/homework_description"
        android:text="@string/question"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

        <TextView
            android:id="@+id/textDownload"
            android:layout_width="332dp"
            android:layout_height="40dp"
            android:background="@drawable/homework_attachment"
            android:drawableEnd="@drawable/attachment_ic"
            android:fontFamily="serif"
            android:text="@string/download_attachment"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeworkQuestions" />

        <TextView
            android:id="@+id/textInstructions"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/homework_instructions"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/instructions"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDownload" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="332dp"
        android:layout_height="150dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:background="@drawable/homework_instructions_boarder"
        android:text="@string/instructions_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInstructions" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/rounded_button"
            android:text="@string/complete"
            android:textSize="30sp"
            android:fontFamily="serif"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instructions" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>